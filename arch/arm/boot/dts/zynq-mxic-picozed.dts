/dts-v1/;
#include "zynq-7000.dtsi"

/ {
	model = "Zynq MXIC PicoZed Development Board";
	compatible = "mxicy,zynq-mxic-picozed", "xlnx,zynq-7000";

	aliases {
		ethernet0 = &gem0;
		serial0 = &uart1;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x30000000>;
	};

	chosen {
		bootargs = "";
		stdout-path = "serial0:115200n8";
	};

	clkwzd_in: clkwzd_in {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <133300000>;
	};
};

&amba {
	clkwizard: clkwizard@43c20000 {
		compatible = "xlnx,clk-wizard-5.1";
		reg = <0x43c20000 0x10000>;
		clocks = <&clkc 15>, <&clkc 15>;
		clock-names = "aclk", "clk_in1";
		#clock-cells = <1>;
		xlnx,clk-wizard-num-outputs = <2>;
	};

	spi_controller: spi@43c30000 {
		compatible = "mxicy,mx25f0a-spi";
		reg = <0x43c30000 0x10000>, <0xa0000000 0x4000000>;
		reg-names = "regs", "dirmap";
		clocks = <&clkwizard 0>, <&clkwizard 1>, <&clkc 15>;
		clock-names = "send_clk", "send_dly_clk", "ps_clk";
		#address-cells = <1>;
		#size-cells = <0>;

		flash@0 {
			compatible = "spi-nand";
			reg = <0>;
			spi-max-frequency = <50000000>;
			spi-tx-bus-width = <4>;
			spi-rx-bus-width = <4>;
		};
	};
};

&clkc {
	ps-clk-frequency = <33333333>;
};

&gem0 {
	status = "okay";
	phy-mode = "rgmii-id";
};

&uart1 {
	status = "okay";
};
